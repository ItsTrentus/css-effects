<script>
    const blob = document.querySelector('.blob');

    document.body.onpointermove = (e) => {
        const { clientX, clientY } = e;

        if (!blob) return;
        blob.animate(
            {
                left: `${clientX}px`,
                top: `${clientY}px`,
            },
            {
                duration: 2500,
                fill: 'forwards',
            }
        );
    };
</script>

<html>
    <body>
        <main>
            <div class="blob"></div>
            <div class="blur"></div>
        </main>
    </body>
</html>

<style lang="scss">
    @import '../styles/global.scss';

    .blob {
        background: linear-gradient(whitesmoke, rebeccaPurple);
        position: absolute;
        height: 500px;
        aspect-ratio: 1;
        border-radius: 50%;
        top: 50%;
        left: 50%;
        translate: -50% -50%;
        animation: rotate 10s linear infinite;
        opacity: 0.8;
    }

    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        50% {
            scale: 1 1.8;
        }

        to {
            transform: rotate(360deg);
        }
    }

    .blur {
        height: 100vh;
        width: 100vw;
        backdrop-filter: blur(40vh);
        z-index: 1;
    }
</style>
