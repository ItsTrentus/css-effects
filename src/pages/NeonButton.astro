---
import '../styles/global.scss';
---

<html>
    <body>
        <main>
            <a href="#" class="neon-btn">Let It Glow</a>
        </main>
    </body>
</html>

<style lang="scss">
    :root {
        --clr-primary: #22b8cf;
        --clr-bg: #222;
    }

    body {
        color: var(--clr-primary);
    }

    .neon-btn {
        text-decoration: none;
        display: inline-block;
        cursor: pointer;

        font-size: 4rem;

        color: var(--clr-primary);
        border: var(--clr-primary) 0.125em solid;
        padding: 0.25em 1em;
        border-radius: 0.25em;

        // text-shadow: 0 0 0.125em hsl(0 0% 100% / 0.3), 0 0 0.45em currentColor;
        text-shadow: 0 0 0.125em hsl(0 0% 100% / 0.3), 0 0 0.45em currentcolor;
        box-shadow: inset 0 0 0.5em 0 var(--clr-primary), 0 0 0.5em 0 var(--clr-primary);
        position: relative;
    }

    .neon-btn::before {
        pointer-events: none;
        content: '';
        position: absolute;
        background: var(--clr-primary);
        top: 120%;
        left: 0;
        width: 100%;
        height: 100%;

        transform: perspective(1em) rotateX(40deg) scale(1, 0.35);
        filter: blur(1em);
        opacity: 0.7;
    }

    .neon-btn::after {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        box-shadow: 0 0 2em 0.5em var(--clr-primary);
        opacity: 0;
        background-color: var(--clr-primary);
        // z-index: -1;
        transition: opacity 100ms linear;
    }

    .neon-btn:hover,
    .neon-btn:focus {
        color: var(--clr-bg);
        background: var(--clr-primary);
        text-shadow: none;
    }

    .neon-btn:hover::before,
    .neon-btn:focus::before {
        opacity: 1;
    }
    .neon-btn:hover::after,
    .neon-btn:focus::after {
        opacity: 1;
    }
</style>
