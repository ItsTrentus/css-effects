---
const img1 = `https://source.unsplash.com/collection/${Math.floor(Math.random() * 1000)}`;
const img2 = `https://source.unsplash.com/collection/${Math.floor(Math.random() * 1000)}`;
const img3 = `https://source.unsplash.com/collection/${Math.floor(Math.random() * 1000)}`;
const img4 = `https://source.unsplash.com/collection/${Math.floor(Math.random() * 1000)}`;
---

<html>
    <body>
        <header>
            Header
            <ul>
                <li><a href="#section1">Section 1</a></li>
                <li><a href="#section2">Section 2</a></li>
                <li><a href="#section3">Section 3</a></li>
                <li><a href="#section4">Section 4</a></li>
            </ul>
        </header>
        <div>
            <section id="section1" class="sticky red">
                <img src={img1} alt="random image" />
                Section 1
            </section>
            <section id="section2" class="sticky green">
                <img src={img2} alt="random image" />
                Section 2
            </section>
            <section id="section3" class="sticky blue">
                <img src={img3} alt="random image" />
                Section 3
            </section>
            <section id="section4" class="sticky orange">
                <img src={img4} alt="random image" />
                Section 4
            </section>
        </div>
        <footer>Footer</footer>
    </body>
</html>

<style lang="scss">
    @import '../styles/global.scss';

    header,
    footer {
        background-color: #333;
        color: #fff;
        padding: 20px;
        display: grid;
        place-items: center;
        height: 100px;
        font-size: 3rem;
    }

    header ul {
        display: flex;
        justify-content: space-around;
        width: 100%;
    }

    li {
        list-style: none;
    }

    a {
        color: #fff;
        text-decoration: none;
    }

    a:hover {
        color: #ccc;
    }

    .sticky {
        padding: 20px;
        display: grid;
        place-items: center;
        height: 100vh;
        position: sticky;
        top: 0;
        left: 0;
        z-index: 1;
        color: white;
        font-size: 10rem;
    }

    .sticky img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        filter: brightness(50%);
    }
</style>
