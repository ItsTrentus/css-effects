---
import '../styles/global.scss';
---

<html>
    <body>
        <main>
            <div class="box">
                <p class="nowrap">I'm a</p>
                <div class="words">
                    <span>problem solver</span>
                    <span>music lover</span>
                    <span>developer</span>
                    <span>lifelong learner</span>
                    <span>huge nerd</span>
                    <span>wanna be woodworker</span>
                </div>
            </div>
        </main>
    </body>
</html>

<style lang="scss">
    @import url('https://fonts.googleapis.com/css2?family=Lato&family=Roboto+Condensed:wght@300;400;700&family=Roboto+Flex:opsz,wght@8..144,100;8..144,300;8..144,400;8..144,500;8..144,600;8..144,700;8..144,800;8..144,900;8..144,1000&display=swap');

    .box {
        display: flex;
        flex-wrap: wrap;
        box-sizing: content-box;
        // border: solid lime 1px;
        font-size: xx-large;
        font-family: 'Roboto Condensed', sans-serif;
        height: 1lh;
        background-color: white;
        padding: 2rem;
        border-radius: 0.5rem;
    }

    .nowrap {
        display: inline-block;
        color: #333;
    }

    span {
        padding-left: 1rem;
        display: block;
        height: 100%;
        animation: wordFlip 10s infinite;
        color: #0e6ffc;
    }

    .words {
        overflow: hidden;
        height: 1lh;
        box-sizing: content;
        // border: solid orange 1px;
    }

    @keyframes wordFlip {
        8% {
            transform: translatey(-12%);
        }
        16% {
            transform: translatey(0%);
        }
        24% {
            transform: translatey(-112%);
        }
        32% {
            transform: translatey(-100%);
        }
        40% {
            transform: translatey(-212%);
        }
        48% {
            transform: translatey(-200%);
        }
        56% {
            transform: translatey(-312%);
        }
        64% {
            transform: translatey(-300%);
        }
        72% {
            transform: translatey(-412%);
        }
        80% {
            transform: translatey(-400%);
        }
        100% {
            transform: translatey(0);
        }
    }
</style>
